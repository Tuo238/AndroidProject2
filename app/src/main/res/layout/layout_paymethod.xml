<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layout_menthod"
    android:orientation="vertical"
    android:id="@+id/layout_background_menthod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_peekHeight="80dp">
    <TextView
        android:id="@+id/tv_paymentchange_note"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Chọn phương thức thanh toán"
        android:textStyle="bold"
        android:textColor="#FF0000"
        />
    <TextView
        android:id="@+id/tv_payment_note"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="22dp"
        android:textStyle="bold"
        android:text="Thanh toán không dùng tiền mặt"
        />

    <LinearLayout
        android:id="@+id/layout_payment_momo"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/img_momo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="30dp"
            android:src="@drawable/momo" />

        <TextView
            android:id="@+id/tv_name_momo"
            android:layout_width="120dp"
            android:layout_height="50dp"

            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Ví Momo" />

        <!--        <CheckBox
                    android:id="@+id/cBox_momo"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.3"
                    android:onClick="onPaymentMethodClicked"
                    />-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="0.3" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_payment_different"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:layout_marginLeft="22dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Phương thức khác" />

    <LinearLayout
        android:id="@+id/layout_paymenthod_money"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_paymenthod_money"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.1"
            android:src="@drawable/money_paymenthod2" />

        <TextView
            android:id="@+id/tv_name_money"
            android:layout_width="120dp"
            android:layout_height="50dp"

            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center"

            android:text="Tiền mặt" />

        <!--<CheckBox
            android:id="@+id/cB_money"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:onClick="onPaymentMethodClicked"
            android:layout_weight="0.5" />-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="0.3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_paymenthod"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="400dp"
            android:layout_height="60dp"

            android:text="Thanh toán dễ dàng hơn khi sử dùng đúng số tiền"
            android:textSize="22dp" />

    </LinearLayout>
</LinearLayout>