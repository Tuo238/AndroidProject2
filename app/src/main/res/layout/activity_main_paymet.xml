<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_payment"
    tools:context=".Main_paymet_update">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:background="@drawable/border"
        android:backgroundTint="#FFFF"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_shipper"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/shipper" />


        <TextView
            android:id="@+id/tv_giaohang"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:text="Giao hàng"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_giaohang"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="in 10 minutes"
            android:textSize="10dp" />

        <!--            <Button-->
        <!--                android:id="@+id/button2"-->
        <!--                android:layout_width="120dp"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginLeft="260dp"-->
        <!--                android:background="@drawable/btn_count_food"-->
        <!--                android:textColor="#FFF"-->
        <!--                android:layout_marginTop="18dp"-->
        <!--                android:layout_marginRight="20dp"-->
        <!--                android:text="Thay đổi" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFF">

        <TextView
            android:id="@+id/tv_address_giaohang"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:text="Địa điểm giao hàng"
            android:textSize="16dp"
            android:textStyle="bold" />

        <!--        <TextView-->
        <!--            android:id="@+id/tv_address"-->
        <!--            android:layout_width="200dp"-->
        <!--            android:layout_height="60dp"-->
        <!--            android:layout_below="@+id/tv_address_giaohang"-->
        <!--            android:paddingLeft="10dp"-->
        <!--            android:text="137 đường bờ bao thắng"-->
        <!--            android:textSize="18dp"-->
        <!--            android:textStyle="bold" />-->

        <Button
            android:id="@+id/btn_change_address"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_count_food"
            android:text="Thay đổi địa điểm"
            android:textColor="#FFF"
            android:textSize="16dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/order_payment"
        android:layout_width="fill_parent"
        android:clickable="false"
        android:layout_height="250dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        android:background="@drawable/border"
        android:backgroundTint="#FFF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:text="Tóm tắt thanh toán"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:layout_weight="2"
                android:text="Giá tiền"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvGiaTien"
                android:layout_weight="7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title_ship"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:layout_weight="2"
                android:text="Phí giao hàng"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvGiaShip"
                android:layout_weight="7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="16000"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title_phiKhac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:layout_weight="2"
                android:text="Phí nền tảng"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvGiaKhac"
                android:layout_weight="7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="3000"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title_tongtien"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:layout_weight="2"
                android:text="Tổng thanh toán"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTongtien"
                android:layout_weight="7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#FFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imgPayment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvkq"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="" />

            <TextView
                android:id="@+id/result"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:text="Hãy chọn thanh toán"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="#DD0000"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_btn_paymenthod"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="280dp"
                android:background="#0000"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/change_paymenthod" />

        </RelativeLayout>


        <!--<ImageView
                    android:id="@+id/img_topping"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="350dp"
                    android:layout_weight="0.3"
                    android:src="@drawable/change_paymenthod" />-->

        <Button
            android:id="@+id/btn_dathang"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_datgiaomon"
            android:text="Đặt giao món"
            android:textColor="#FFF"
            android:textSize="22dp" />
    </LinearLayout>

</LinearLayout>